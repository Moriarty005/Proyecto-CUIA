<EventsScreen>:
    name: 'events'
    BoxLayout:
        orientation: 'vertical'
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        FloatLayout:
            size_hint: dp(1), dp(.3)
            Button:
                size_hint: None, None
                size: dp(50), dp(50)
                background_color: (1, 1, 1, 1)
                pos_hint: {'left': 0, 'center_y': 0.5}
                on_press: app.controller.moveToHomePage()

                Image:
                    source: 'media/home.png'
                    size_hint: None, None
                    size: dp(50), dp(50)
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Image:
                source: 'media/logo.png'
                size_hint: dp(.5), None
                pos_hint: {"center_x":0.5, "center_y":.5}

        RecycleView:
            id: eventos
            viewclass: 'EventoLabel'
            size_hint: dp(.5), dp(1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

<EventoLabel@Button>:
    info: ''
    id_evento: ''
    size_hint_y: None
    height: dp(56)
    on_press: app.controller.moveToEventInfoPage(self.id_evento)
    text: root.info