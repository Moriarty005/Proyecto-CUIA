<RegisterScreen>:
    name: 'register'
    on_enter: app.controller.previous_page = 'login'
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 50, 20, 50]
        spacing: 10
        Button:
            size_hint: None, None
            size: dp(50), dp(50)
            pos_hint: {'left': 0, 'center_y': 0.5}
            on_press: app.controller.moveToPreviousPage()
        MDLabel:
            pos_hint: {'center_x': 0.5}
            size_hint: None, None
            size: dp(300), dp(25)
            id: error_label
            text: ''
            font_style: 'Body1'
            halign: 'center'
            color: 1, 0, 0, 1
        MDCard:
            size_hint: dp(.5), dp(1.0)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            elevation: 10
            padding: 25
            spacing: 20
            orientation: 'vertical'

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 20

                    MDLabel:
                        text: 'Register'
                        font_style: 'H4'
                        halign: 'center'

                    MDTextField:
                        id: username
                        hint_text: 'Username*'
                        icon_right: 'account'
                        size_hint_x: None
                        width: 250
                        pos_hint: {'center_x': 0.5}
                    MDTextField:
                        id: password
                        hint_text: 'Password*'
                        icon_right: 'lock'
                        password: True
                        size_hint_x: None
                        width: 250
                        pos_hint: {'center_x': 0.5}
                    MDRaisedButton:
                        text: 'Foto*'
                        pos_hint: {'center_x': 0.5}
                        on_press: app.controller.moveToTakePhotoPage()

                    MDTextField:
                        id: name
                        hint_text: 'Name*'
                        size_hint_x: None
                        width: 250
                        pos_hint: {'center_x': 0.5}
                    MDTextField:
                        id: surname
                        hint_text: 'Surname'
                        size_hint_x: None
                        width: 250
                        pos_hint: {'center_x': 0.5}
                    MDTextField:
                        id: dni
                        hint_text: 'DNI*'
                        size_hint_x: None
                        width: 250
                        pos_hint: {'center_x': 0.5}
                    MDTextField:
                        id: mail
                        hint_text: 'E-mail*'
                        size_hint_x: None
                        width: 250
                        pos_hint: {'center_x': 0.5}
                    MDLabel:
                        text: 'Los campos con un asterisco son obligatorios'
        MDRaisedButton:
            text: 'Register'
            pos_hint: {'center_x': 0.5}
            on_press: app.controller.register(username.text, password.text, name.text, surname.text, dni.text, mail.text)