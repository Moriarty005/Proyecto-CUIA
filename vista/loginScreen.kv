<LoginScreen>:
    name: 'login'
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 50, 20, 50]
        spacing: 10
        MDCard:
            size_hint: None, None
            size: 350, 400
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            elevation: 10
            padding: 25
            spacing: 20
            orientation: 'vertical'
            MDLabel:
                text: 'Login'
                font_style: 'H4'
                halign: 'center'
            MDLabel:
                id: error_label
                text: ''
                font_style: 'Body1'
                halign: 'center'
                color: 1, 0, 0, 1
            MDTextField:
                id: username
                hint_text: 'Username'
                icon_right: 'account'
                size_hint_x: None
                width: 250
                pos_hint: {'center_x': 0.5}
            MDTextField:
                id: password
                hint_text: 'Password'
                icon_right: 'lock'
                password: True
                size_hint_x: None
                width: 250
                pos_hint: {'center_x': 0.5}
            MDRaisedButton:
                text: 'Login'
                pos_hint: {'center_x': 0.5}
                on_release: app.controller.login(username.text, password.text)
        MDCard:
            size_hint: None, None
            size: 350, 100
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            elevation: 10
            padding: 25
            spacing: 20
            orientation: 'vertical'
            MDLabel:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                padding: 25
                text: '¿Todavía no estás registrado?'
            MDRaisedButton:
                text: 'Register'
                pos_hint: {'center_x': 0.5}
                on_press: app.controller.moveToRegisterPage()